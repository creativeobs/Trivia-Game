<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ending">

    <RelativeLayout
        android:id="@+id/relativeLayout8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="99dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/relativeLayout7"
            android:layout_width="wrap_content"
            android:layout_height="296dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="195dp"
            android:alpha="0.8"
            android:background="@drawable/message" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="249dp"
        android:layout_height="107dp"
        android:fontFamily="@font/product_bold"
        android:gravity="center"
        android:text="Congratulations! \nYou got:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.447" />

    <TextView
        android:id="@+id/scoreENDING"
        android:layout_width="91dp"
        android:layout_height="34dp"
        android:layout_marginBottom="120dp"
        android:fontFamily="@font/product_regular"
        android:gravity="center"
        android:text="TextView"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.245" />

    <TextView
        android:id="@+id/answeredEnding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have answered"
        android:textAlignment="center"
        android:fontFamily="@font/product_bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>